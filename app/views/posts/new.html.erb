<form action="<%= posts_path %>" method="post">
    <h1>Create a New Post</h1>
    
    <%= form_with(model: @post, url: posts_path, method: :post) do |form| %>
    <div>
        <%= form.label :tittle %>
        <%= form.text_area :tittle %>
      </div>
      <div>
        <%= form.label :content %>
        <%= form.text_area :content %>
      </div>
      <div>
        <%= form.submit 'Create Post' %>
      </div>
    <% end %>
  </form>
  